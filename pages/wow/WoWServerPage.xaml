<Page x:Class="MGM_Launcherv1._0.WoWServerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MGM_Launcherv1._0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WoWServerPage">
    <Page.Background>
        <ImageBrush ImageSource="/data/WoWPageBG.png"  Stretch="Fill"/>
    </Page.Background>

    <Grid>
        <Button x:Name="PlayInstallUpdate" Content="Install" HorizontalAlignment="Left" Margin="634,363,0,0" Click="PlayInstallUpdateClick" VerticalAlignment="Top" Width="156" Height="52"/>
        <TextBlock x:Name="FileText" HorizontalAlignment="Left" Margin="10,399,0,0" TextWrapping="Wrap" Text="File Progress" VerticalAlignment="Top" Width="606" TextAlignment="Center"/>
        <ProgressBar x:Name="DownloadProgressBar" Value="0.5" HorizontalAlignment="Center" Height="20" Margin="0,420,0,0" VerticalAlignment="Top" Width="780"/>
        <TextBlock x:Name="DirectoryPathText" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="702" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="PlayInstallUpdate_Copy" Content="Change Directory" HorizontalAlignment="Left" Margin="634,340,0,0" Click="changeDirectoryClick" VerticalAlignment="Top" Width="156" Height="20"/>

    </Grid>
</Page>
